# file Makefile
# make file for CrdWzemOpx card job handler, release wzemd_awsubt
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZEMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswzem -I$(SRCROOT)/wzemd/VecWzem -I$(SRCROOT)/wzemd/IexWzem -I$(SRCROOT)/wzemd
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = CrdWzemOpx.o PnlWzemOpxList.o QryWzemOpxList.o PnlWzemOpxHeadbar.o PnlWzemOpxRec.o PnlWzemOpxDetail.o

LIB = libcrdwzemopx

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wzemd/

clean:
	rm -f *.o

