# file Makefile
# make file for CrdWzemPrd card job handler, release wzemcmbd_genio
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZEMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswzem -I$(SRCROOT)/wzemcmbd/VecWzem -I$(SRCROOT)/wzemcmbd/IexWzem -I$(SRCROOT)/wzemcmbd
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWzemPrd.o PnlWzemPrdList.o QryWzemPrdList.o PnlWzemPrdHeadbar.o PnlWzemPrdRec.o PnlWzemPrd1NEvent.o QryWzemPrd1NEvent.o PnlWzemPrd1NNode.o QryWzemPrd1NNode.o PnlWzemPrd1NJob.o QryWzemPrd1NJob.o PnlWzemPrdDetail.o

LIB = libcrdwzemprd

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wzemcmbd/

clean:
	rm -f *.o

