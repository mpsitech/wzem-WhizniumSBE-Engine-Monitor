# file Makefile
# make file for Wzem system vectors, release wzemcmbd_genio
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = VecWzemVCall.o VecWzemVDpch.o VecWzemVError.o VecWzemVExpstate.o VecWzemVIop.o VecWzemVJob.o VecWzemVMimetype.o VecWzemVOpengtype.o VecWzemVOppack.o VecWzemVQrystate.o VecWzemVReqitmode.o VecWzemVStub.o VecWzemVTag.o

LIB = libvecwzem

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/

clean:
	rm -f *.o

