# file Makefile
# make file for Wzem system vectors, release wzemcmbd_ssv(jack (x86ubt) cross-compilation)
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = /home/mpsitech/emb/ssv/gcc-linaro-6.3.1-2017.05-x86_64_arm-linux-gnueabihf/bin/arm-linux-gnueabihf-g++
CPPFLAGS = --sysroot=/home/mpsitech/emb/ssv/sysroot-glibc-linaro-2.23-2017.05-arm-linux-gnueabihf -std=c++11 -mfloat-abi=hard -g -Wall -Os -pthread

STATLIB = /home/mpsitech/emb/ssv/gcc-linaro-6.3.1-2017.05-x86_64_arm-linux-gnueabihf/bin/arm-linux-gnueabihf-ar
STATLIBFLAGS = rcs

INCPATH = -I=/usr/include -I=/usr/include/libxml2 -I=/usr/local/include

OBJS = VecWzemVCall.o VecWzemVDpch.o VecWzemVError.o VecWzemVExpstate.o VecWzemVIop.o VecWzemVJob.o VecWzemVMimetype.o VecWzemVOpengtype.o VecWzemVOppack.o VecWzemVQrystate.o VecWzemVReqitmode.o VecWzemVStub.o VecWzemVTag.o

LIB = libvecwzem

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a /home/mpsitech/emb/ssv/sysroot-glibc-linaro-2.23-2017.05-arm-linux-gnueabihf$(LIBROOT)/

clean:
	rm -f *.o

