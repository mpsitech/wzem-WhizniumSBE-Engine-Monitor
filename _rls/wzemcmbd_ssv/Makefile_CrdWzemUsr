# file Makefile
# make file for CrdWzemUsr card job handler, release wzemcmbd_ssv(jack (x86ubt) cross-compilation)
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = /home/mpsitech/emb/ssv/gcc-linaro-6.3.1-2017.05-x86_64_arm-linux-gnueabihf/bin/arm-linux-gnueabihf-g++
CPPFLAGS = --sysroot=/home/mpsitech/emb/ssv/sysroot-glibc-linaro-2.23-2017.05-arm-linux-gnueabihf -std=c++11 -mfloat-abi=hard -g -Wall -Os -pthread -DWZEMCMBD

STATLIB = /home/mpsitech/emb/ssv/gcc-linaro-6.3.1-2017.05-x86_64_arm-linux-gnueabihf/bin/arm-linux-gnueabihf-ar
STATLIBFLAGS = rcs

INCPATH = -I=$(SRCROOT)/dbswzem -I=$(SRCROOT)/wzemcmbd/VecWzem -I=$(SRCROOT)/wzemcmbd/IexWzem -I=$(SRCROOT)/wzemcmbd
INCPATH += -I=/usr/include -I=/usr/include/libxml2 -I=/usr/local/include

OBJS = CrdWzemUsr.o PnlWzemUsrList.o QryWzemUsrList.o PnlWzemUsrHeadbar.o PnlWzemUsrRec.o PnlWzemUsrMNUsergroup.o QryWzemUsrMNUsergroup.o PnlWzemUsr1NSession.o QryWzemUsr1NSession.o PnlWzemUsrAAccess.o QryWzemUsrAAccess.o PnlWzemUsrDetail.o

LIB = libcrdwzemusr

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a /home/mpsitech/emb/ssv/sysroot-glibc-linaro-2.23-2017.05-arm-linux-gnueabihf$(LIBROOT)/wzemcmbd/

clean:
	rm -f *.o

