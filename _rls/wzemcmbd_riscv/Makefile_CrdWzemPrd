include ../Makefile.inc

CPP = 
CPPFLAGS = --sysroot=${SYSROOT} -DWZEMCMBD

STATLIB = 
STATLIBFLAGS = rcs

INCPATH = -I=$(BUILDROOT)/dbswzem -I=$(BUILDROOT)/wzemcmbd/VecWzem -I=$(BUILDROOT)/wzemcmbd/IexWzem -I=$(BUILDROOT)/wzemcmbd
INCPATH += -I=${WHIZSDKROOT}/build -I=/usr/include -I=/usr/include/libxml2

OBJS = CrdWzemPrd.o PnlWzemPrdList.o QryWzemPrdList.o PnlWzemPrdHeadbar.o PnlWzemPrdRec.o PnlWzemPrd1NEvent.o QryWzemPrd1NEvent.o PnlWzemPrd1NNode.o QryWzemPrd1NNode.o PnlWzemPrd1NJob.o QryWzemPrd1NJob.o PnlWzemPrdDetail.o

LIB = libcrdwzemprd

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a ${SYSROOT}$(LIBROOT)/wzemcmbd/

