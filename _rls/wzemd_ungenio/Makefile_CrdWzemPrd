# file Makefile
# make file for CrdWzemPrd card job handler, release wzemd_ungenio
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZEMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswzem -I$(SRCROOT)/wzemd/VecWzem -I$(SRCROOT)/wzemd/IexWzem -I$(SRCROOT)/wzemd
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWzemPrd.o PnlWzemPrdList.o QryWzemPrdList.o PnlWzemPrdHeadbar.o PnlWzemPrdRec.o PnlWzemPrd1NEvent.o QryWzemPrd1NEvent.o PnlWzemPrd1NNode.o QryWzemPrd1NNode.o PnlWzemPrd1NJob.o QryWzemPrd1NJob.o PnlWzemPrdDetail.o

LIB = libcrdwzemprd

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wzemd/

clean:
	rm -f *.o

