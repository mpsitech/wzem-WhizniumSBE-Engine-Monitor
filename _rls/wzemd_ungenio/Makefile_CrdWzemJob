# file Makefile
# make file for CrdWzemJob card job handler, release wzemd_ungenio
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZEMD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswzem -I$(SRCROOT)/wzemd/VecWzem -I$(SRCROOT)/wzemd/IexWzem -I$(SRCROOT)/wzemd
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWzemJob.o PnlWzemJobList.o QryWzemJobList.o PnlWzemJobHeadbar.o PnlWzemJobRec.o PnlWzemJobSup1NJob.o QryWzemJobSup1NJob.o PnlWzemJob1NClstn.o QryWzemJob1NClstn.o PnlWzemJob1NPreset.o QryWzemJob1NPreset.o PnlWzemJob1NCall.o QryWzemJob1NCall.o PnlWzemJob1NOp.o QryWzemJob1NOp.o PnlWzemJobDetail.o

LIB = libcrdwzemjob

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wzemd/

clean:
	rm -f *.o

