# file Makefile
# make file for CrdWzemJob card job handler, release wzemcmbd_awscyg
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=gnu++11 -g -Wall -Os -pthread -DWZEMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswzem -I$(SRCROOT)/wzemcmbd/VecWzem -I$(SRCROOT)/wzemcmbd/IexWzem -I$(SRCROOT)/wzemcmbd
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/local/include

OBJS = CrdWzemJob.o PnlWzemJobList.o QryWzemJobList.o PnlWzemJobHeadbar.o PnlWzemJobRec.o PnlWzemJobSup1NJob.o QryWzemJobSup1NJob.o PnlWzemJob1NClstn.o QryWzemJob1NClstn.o PnlWzemJob1NPreset.o QryWzemJob1NPreset.o PnlWzemJob1NCall.o QryWzemJob1NCall.o PnlWzemJob1NOp.o QryWzemJob1NOp.o PnlWzemJobDetail.o

LIB = libcrdwzemjob

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wzemcmbd/

clean:
	rm -f *.o

