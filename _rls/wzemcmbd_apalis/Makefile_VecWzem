# file Makefile
# make file for Wzem system vectors, release wzemcmbd_apalis(linux (ubt_x86_64) cross-compilation)
# author Catherine Johnson
# date created: 21 Sep 2020
# modified: 21 Sep 2020

include ../Makefile.inc

CPP = ${TCHROOT}/arm-tdx-linux-gnueabi-g++
CPPFLAGS = --sysroot=${SYSROOT} -std=c++11 -march=armv7-a -mthumb -mfpu=neon -mfloat-abi=hard -g -Wall -Os -pthread

STATLIB = ${TCHROOT}/arm-tdx-linux-gnueabi-ar
STATLIBFLAGS = rcs

INCPATH = -I=${WHIZROOT}/src -I=/usr/include -I=/usr/include/libxml2

OBJS = VecWzemVCall.o VecWzemVDpch.o VecWzemVError.o VecWzemVExpstate.o VecWzemVIop.o VecWzemVJob.o VecWzemVMimetype.o VecWzemVOpengtype.o VecWzemVOppack.o VecWzemVQrystate.o VecWzemVReqitmode.o VecWzemVStub.o VecWzemVTag.o

LIB = libvecwzem

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a ${SYSROOT}$(LIBROOT)/

clean:
	rm -f *.o

