# file Makefile
# make file for Wzem system vectors, release wzemcmbd_zedboard(jack (x86ubt) cross-compilation)
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = /opt/Xilinx/petalinux-v2017.2/tools/linux-i386/gcc-arm-linux-gnueabi/bin/arm-linux-gnueabihf-g++
CPPFLAGS = --sysroot=/home/mpsitech/emb/zedboard/avnet-digilent-zedboard-2017.2/build/tmp/sysroots/plnx_arm -std=c++11 -mfloat-abi=hard -g -Wall -Os -pthread

STATLIB = /opt/Xilinx/petalinux-v2017.2/tools/linux-i386/gcc-arm-linux-gnueabi/bin/arm-linux-gnueabihf-ar
STATLIBFLAGS = rcs

INCPATH = -I=/usr/include -I=/usr/include/libxml2 -I=/usr/local/include

OBJS = VecWzemVCall.o VecWzemVDpch.o VecWzemVError.o VecWzemVExpstate.o VecWzemVIop.o VecWzemVJob.o VecWzemVMimetype.o VecWzemVOpengtype.o VecWzemVOppack.o VecWzemVQrystate.o VecWzemVReqitmode.o VecWzemVStub.o VecWzemVTag.o

LIB = libvecwzem

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a /home/mpsitech/emb/zedboard/avnet-digilent-zedboard-2017.2/build/tmp/sysroots/plnx_arm$(LIBROOT)/

clean:
	rm -f *.o

