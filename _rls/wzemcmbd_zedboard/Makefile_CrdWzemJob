# file Makefile
# make file for CrdWzemJob card job handler, release wzemcmbd_zedboard(jack (x86ubt) cross-compilation)
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = /opt/Xilinx/petalinux-v2017.2/tools/linux-i386/gcc-arm-linux-gnueabi/bin/arm-linux-gnueabihf-g++
CPPFLAGS = --sysroot=/home/mpsitech/emb/zedboard/avnet-digilent-zedboard-2017.2/build/tmp/sysroots/plnx_arm -std=c++11 -mfloat-abi=hard -g -Wall -Os -pthread -DWZEMCMBD

STATLIB = /opt/Xilinx/petalinux-v2017.2/tools/linux-i386/gcc-arm-linux-gnueabi/bin/arm-linux-gnueabihf-ar
STATLIBFLAGS = rcs

INCPATH = -I=$(SRCROOT)/dbswzem -I=$(SRCROOT)/wzemcmbd/VecWzem -I=$(SRCROOT)/wzemcmbd/IexWzem -I=$(SRCROOT)/wzemcmbd
INCPATH += -I=/usr/include -I=/usr/include/libxml2 -I=/usr/local/include

OBJS = CrdWzemJob.o PnlWzemJobList.o QryWzemJobList.o PnlWzemJobHeadbar.o PnlWzemJobRec.o PnlWzemJobSup1NJob.o QryWzemJobSup1NJob.o PnlWzemJob1NClstn.o QryWzemJob1NClstn.o PnlWzemJob1NPreset.o QryWzemJob1NPreset.o PnlWzemJob1NCall.o QryWzemJob1NCall.o PnlWzemJob1NOp.o QryWzemJob1NOp.o PnlWzemJobDetail.o

LIB = libcrdwzemjob

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a /home/mpsitech/emb/zedboard/avnet-digilent-zedboard-2017.2/build/tmp/sysroots/plnx_arm$(LIBROOT)/wzemcmbd/

clean:
	rm -f *.o

