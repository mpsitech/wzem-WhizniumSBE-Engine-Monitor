# file Makefile
# make file for CrdWzemJob card job handler, release wzemcmbd_arty(linux (ubt_x86_64) cross-compilation)
# author Catherine Johnson
# date created: 21 Sep 2020
# modified: 21 Sep 2020

include ../Makefile.inc

CPP = ${TCHROOT}/arm-xilinx-linux-gnueabi-g++
CPPFLAGS = --sysroot=${SYSROOT} -std=c++11 -march=armv7-a -mthumb -mfpu=neon -mfloat-abi=hard -mcpu=cortex-a9 -g -Wall -Os -pthread -DWZEMCMBD

STATLIB = ${TCHROOT}/arm-xilinx-linux-gnueabi-ar
STATLIBFLAGS = rcs

INCPATH = -I=$(SRCROOT)/dbswzem -I=$(SRCROOT)/wzemcmbd/VecWzem -I=$(SRCROOT)/wzemcmbd/IexWzem -I=$(SRCROOT)/wzemcmbd
INCPATH += -I=${WHIZROOT}/src -I=/usr/include -I=/usr/include/libxml2

OBJS = CrdWzemJob.o PnlWzemJobList.o QryWzemJobList.o PnlWzemJobHeadbar.o PnlWzemJobRec.o PnlWzemJobSup1NJob.o QryWzemJobSup1NJob.o PnlWzemJob1NOp.o QryWzemJob1NOp.o PnlWzemJob1NClstn.o QryWzemJob1NClstn.o PnlWzemJob1NPreset.o QryWzemJob1NPreset.o PnlWzemJob1NCall.o QryWzemJob1NCall.o PnlWzemJobDetail.o

LIB = libcrdwzemjob

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a ${SYSROOT}$(LIBROOT)/wzemcmbd/

clean:
	rm -f *.o

