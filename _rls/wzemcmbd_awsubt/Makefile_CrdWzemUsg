# file Makefile
# make file for CrdWzemUsg card job handler, release wzemcmbd_awsubt
# author Alexander Wirthmueller
# date created: 4 Jun 2020
# modified: 4 Jun 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWZEMCMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswzem -I$(SRCROOT)/wzemcmbd/VecWzem -I$(SRCROOT)/wzemcmbd/IexWzem -I$(SRCROOT)/wzemcmbd
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = CrdWzemUsg.o PnlWzemUsgList.o QryWzemUsgList.o PnlWzemUsgHeadbar.o PnlWzemUsgRec.o PnlWzemUsgAAccess.o QryWzemUsgAAccess.o PnlWzemUsgMNUser.o QryWzemUsgMNUser.o PnlWzemUsgDetail.o

LIB = libcrdwzemusg

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wzemcmbd/

clean:
	rm -f *.o

